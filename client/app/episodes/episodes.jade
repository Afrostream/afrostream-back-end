.form-group
  label.control-label Dur√©e (secondes)
  input.form-control(type='number' ng-model='item.duration')
  slider(min='0' step='10' max='10000' ng-model="item.duration")

.form-group
  label.control-label VO/VOST/...
  select.form-control(type='text' ng-model='item.vXstY' ng-options='o as o for o in vXstYList' style="width:auto;")

.form-group
  div
    label.control-label CSA
  div.btn-group
    div.btn.csa(ng-model="item.CSA" uib-btn-radio="1")
      img(src="/assets/images/CSA_1.gif")
    div.btn.csa(ng-model="item.CSA" uib-btn-radio="2")
      img(src="/assets/images/CSA_2.gif")
    div.btn.csa(ng-model="item.CSA" uib-btn-radio="3")
      img(src="/assets/images/CSA_3.gif")
    div.btn.csa(ng-model="item.CSA" uib-btn-radio="4")
      img(src="/assets/images/CSA_4.gif")
    div.btn.csa(ng-model="item.CSA" uib-btn-radio="5")
      img(src="/assets/images/CSA_5.gif")

.form-group
  div
    label.control-label rating
  input.form-control(type='number' ng-model='item.rating')
  slider(min='0' step='0.1' max='5' ng-model="item.rating")

.form-group
  label.control-label Episode Number
  input.form-control(type='number' min='0' ng-model='item.episodeNumber')

.form-group
  label.control-label Season
  input.form-control(type='text' ng-model='item.season' placeholder='Search season' typeahead='season as season.title for season in loadSeasons($viewValue) | limitTo: 5' typeahead-template-url='imagesTemplate.html')

.form-group
  label.control-label Video
  input.form-control(type='text' ng-model='item.video' placeholder='Search video' typeahead='video as video.name for video in loadVideo($viewValue) | limitTo: 5' typeahead-template-url='imagesTemplate.html')
  a(ng-if="mpd" target="_backoplayer" href="https://afrostream-player.herokuapp.com/?url={{mpd}}")
    | https://afrostream-player.herokuapp.com/?url={{mpd}}

.form-group
  label.control-label Countries
  countries(props="countriesProps")

.form-group
  label.control-label Broadcasters
  broadcasters(props="broadcastersProps")
