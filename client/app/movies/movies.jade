div(id='page-wrapper' ng-class='{open: toggle}' ng-cloak)
  side-bar

  div(id='content-wrapper')
    navbar
    .page-content
      .row
        .col-lg-12
          .btn-group.pull-right(role='button')
            .btn-group
              input.form-control(type='text', placeholder='Search a {{type}} here.', ng-model='searchItem')
            .btn-group
              button.btn.btn-primary.pull-right(ng-click='newItem()')
                span.glyphicon.glyphicon-plus
                span Add new
              .clearfix

      .col-md-3(ng-repeat='item in items')
        .thumbnail
          img.poster.img-responsive(src='{{item.poster}}')
          .caption
            h3 {{item.title}}
            p {{item.synopsis | limitTo:100}}{{item.synopsis.length > 100 ? '...' : ''}}
              .btn-group
                button.btn.btn-primary(ng-click='editItem(item)')
                  span.glyphicon.glyphicon-pencil.pull-right
                button.btn.btn-danger(ng-click='deleteItem(item)')
                  span.glyphicon.glyphicon-trash.pull-right
