tags-input(ng-model='item.episodes' placeholder='Search episode' add-from-autocomplete-only='true' display-property='title' key-property='_id')
  auto-complete(source='loadEpisodes($query)' template='episode-template' min-length='0'
  load-on-focus='true'
  load-on-empty='true'
  max-results-to-show='32')
script(type='text/ng-template' id='episode-template')
  .tag-template
    span {{data.title}}

