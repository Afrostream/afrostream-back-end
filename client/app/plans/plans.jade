.form-group
  label.control-label Name
  input.form-control(type='text' ng-model='item.name')

.form-group
  label.control-label Plan Code
  input.form-control(type='text' ng-model='item.planCode')

.form-group
  label(for='type').control-label Recurring
.form-group
  .btn-group
    label.btn.btn-primary(ng-model='item.recurring' btn-radio='"monthly"' ) Monthly
    label.btn.btn-primary(ng-model='item.recurring' btn-radio='"annual"' ) Annual

.form-group
  label.control-label Info
  textarea.form-control(rows='4' cols='50' ng-model='item.info')

.form-group
  label.control-label Price in cents {{item.price / 100}} â‚¬
  input.form-control(type='number' ng-model='item.price')
